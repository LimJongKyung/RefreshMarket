<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.refresh.login.dao.InfoDAO">
    <!-- 회원 정보 전체 조회 -->
    <select id="getAllInfo" parameterType="member">
        SELECT ID, PASSWD, NAME, REGISTRATIONNUMBER, ADDRESS, PHONENUMBER, EMAIL
        FROM MEMBER
        WHERE ID = #{id}
    </select>
    
    <!-- 회원 정보 수정 -->
    <update id="updateMemberInfo">
        UPDATE member
        SET address = #{address}, phoneNumber = #{phoneNumber}, email = #{email}
        WHERE id = #{id}
    </update>
    
</mapper>