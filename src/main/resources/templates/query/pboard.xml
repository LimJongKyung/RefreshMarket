<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.refresh.board.dao.PBoardDAO">
	<!-- 계절 상품 제품 목록 조회 -->
    <select id="seasonProducts" resultType="pboard">
        SELECT
            PRODUCT_ID,
            NAME,
            DESCRIPTION,
            PRICE,
            STOCK,
            IMAGE_URL,
            CATEGORY_ID,
            CREATED_AT,
            UPDATED_AT
        FROM
            PRODUCTS
    </select>
    
    <!-- 지역 상품 제품 목록 조회 -->
    <select id="localProducts" resultType="pboard">
        SELECT
            PRODUCT_ID,
            NAME,
            DESCRIPTION,
            PRICE,
            STOCK,
            IMAGE_URL,
            CATEGORY_ID,
            CREATED_AT,
            UPDATED_AT
        FROM
            PRODUCTS
    </select>
    
    <!-- 세일 상품 제품 목록 조회 -->
    <select id="saleProducts" resultType="pboard">
        SELECT
            PRODUCT_ID,
            NAME,
            DESCRIPTION,
            PRICE,
            STOCK,
            IMAGE_URL,
            CATEGORY_ID,
            CREATED_AT,
            UPDATED_AT
        FROM
            PRODUCTS
    </select>
    
    <!-- 공동구매 상품 제품 목록 조회 -->
    <select id="groupPurchaseProducts" resultType="pboard">
        SELECT
            PRODUCT_ID,
            NAME,
            DESCRIPTION,
            PRICE,
            STOCK,
            IMAGE_URL,
            CATEGORY_ID,
            CREATED_AT,
            UPDATED_AT
        FROM
            PRODUCTS
    </select>
    
    <!-- 중소기업 상품 제품 목록 조회 -->
    <select id="smallBusinessProducts" resultType="pboard">
        SELECT
            PRODUCT_ID,
            NAME,
            DESCRIPTION,
            PRICE,
            STOCK,
            IMAGE_URL,
            CATEGORY_ID,
            CREATED_AT,
            UPDATED_AT
        FROM
            PRODUCTS
    </select>
    
	<select id="findById" resultType="pboard">
	    SELECT 
	        PRODUCT_ID,
	        NAME,
	        PRICE,
	        STOCK,
	        DESCRIPTION,
	        IMAGE_URL
	    FROM PRODUCTS
	    WHERE PRODUCT_ID = #{productId}
	</select>
	
	<!-- 리뷰 목록 조회 -->
    <select id="selectReviewsByProductId" resultType="review">
        SELECT * FROM REVIEW WHERE PRODUCT_ID = #{productId}
    </select>
	
</mapper>