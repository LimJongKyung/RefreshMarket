<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.refresh.menu.dao.MenuDAO">
    <select id="selectMenusByPosition" parameterType="menu">
        SELECT id, name, position
        FROM MENU
        WHERE POSITION = #{position}
        ORDER BY id ASC
    </select>
    
    <select id="selectAllMenus" resultType="com.refresh.menu.vo.MenuVO">
        SELECT * FROM MENU
    </select>

    <!-- 카테고리별 상품 전체 -->
    <select id="selectProductsByCategory" parameterType="string" resultType="pboard">
        SELECT * FROM PRODUCTS WHERE CATEGORY = #{category}
    </select>

    <!-- 페이징 적용된 카테고리별 상품 목록 -->
    <select id="selectProductsByCategoryPaged" parameterType="map" resultType="pboard">
	    SELECT *
	    FROM PRODUCTS
	    WHERE CATEGORY = #{category}
	    ORDER BY PRODUCT_ID DESC
	    OFFSET #{offset} ROWS FETCH NEXT #{limit} ROWS ONLY
	</select>
	
	<select id="countProductsByCategory" parameterType="string" resultType="int">
	    SELECT COUNT(*)
	    FROM PRODUCTS
	    WHERE CATEGORY = #{category}
	</select>
</mapper>